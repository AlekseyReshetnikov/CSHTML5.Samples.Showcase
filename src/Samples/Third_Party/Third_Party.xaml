<UserControl
    x:Class="CSHTML5.Samples.Showcase.Third_Party"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CSHTML5.Samples.Showcase">
  <Border Background="White" CornerRadius="6" Width="500" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="22,22,0,0">
    <Border.Effect>
      <DropShadowEffect ShadowDepth="3" Color="Black" BlurRadius="10" Opacity="0.1" />
    </Border.Effect>
    <StackPanel Margin="0,0,20,20">
      <TextBlock Text="Third-Party Components" Foreground="#FF2299A1" Style="{StaticResource PageHeader_Style}"/>
      <TextBlock Text="Please check back soon for a demo of the following components:" FontSize="16" Foreground="#FF333333" TextWrapping="Wrap" Margin="22,10,0,0"/>

      <native:HtmlPresenter xmlns:native="using:CSHTML5.Native.Html.Controls" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="native">
        <ul style="font-size:1.4em; margin:10px;">
          <li style="margin-top:10px;"> Telerik UI for Silverlight*                      </li>
          <li style="margin-top:10px;"> Telerik Kendo UI* (via JavaScript interop)       </li>
          <li style="margin-top:10px;"> Syncfusion Essential JS* (via JavaScript interop)</li>
          <li style="margin-top:10px;"> DevExpress DevExtreme*                           </li>
          <li style="margin-top:10px;"> Open RIA Services                                </li>
          <li style="margin-top:10px;"> MVVM Light                                       </li>
          <li style="margin-top:10px;"> Plotly.js (via JavaScript interop)               </li>
          <li style="margin-top:10px;"> More...</li>
        </ul>
      </native:HtmlPresenter>


      <TextBlock Text="*Note: a license from the third-party vendor is required." FontSize="12" Foreground="#FF666666" TextWrapping="Wrap" Margin="22,8,0,0" FontStyle="Italic"/>
    </StackPanel>
  </Border>
</UserControl>
