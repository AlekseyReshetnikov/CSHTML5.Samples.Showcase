<UserControl
    x:Class="CSHTML5.Samples.Showcase.Welcome"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CSHTML5.Samples.Showcase">
    <StackPanel>
        <TextBlock Text="Welcome!" Style="{StaticResource PageHeader_Style}"/>
        <TextBlock Text="Welcome to the CSHTML5 Showcase." FontSize="16" Foreground="#FF333333" TextWrapping="Wrap" Margin="14,10,0,0"/>
        <TextBlock Text="This app was written in standard C# and XAML, and compiled with CSHTML5." FontSize="16" Foreground="#FF333333" TextWrapping="Wrap" Margin="14,10,0,0"/>
        <TextBlock Text="The source code of this app is available at:" FontSize="16" Foreground="#FF333333" TextWrapping="Wrap" Margin="14,10,0,0"/>
        <HyperlinkButton Content="https://github.com/cshtml5/CSHTML5.Samples.Showcase" FontSize="16" Foreground="Blue" Margin="14,10,0,0" Cursor="Hand" NavigateUri="https://github.com/cshtml5/CSHTML5.Samples.Showcase" HorizontalAlignment="Left"/>
    </StackPanel>
</UserControl>
