<Page
    x:Class="CSHTML5.Samples.Showcase.Samples.Third_Party.Telerik_KendoUI.Grid.Grid_Demo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:CSHTML5.Samples.Showcase"
    xmlns:kendo_ui="clr-namespace:CSHTML5.Extensions.Telerik.KendoUI;assembly=CSHTML5.Extensions.Telerik.KendoUI.Grid">
    <StackPanel>
        <TextBlock Text="Telerik Kendo UI" Style="{StaticResource PageHeader_Style}"/>
        <local:MasonryPanel Style="{StaticResource Panel_Style}">
            <ContentControl Style="{StaticResource Card_Style}" Width="600">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <ContentControl Content="Grid" Foreground="#FF37B24F" Background="#FFC8929A" Style="{StaticResource HeaderControl_Style}"/>
                    <StackPanel Orientation="Vertical" Grid.Row="1">
                        <TextBlock x:Name="LoadingPleaseWaitMessage" Text="Loading Telerik Kendo UI library, please wait..." Foreground="#FF37B24F" FontSize="18" TextWrapping="Wrap" Margin="16,0,0,10" Visibility="Collapsed"/>
                        <kendo_ui:Grid x:Name="Grid" Height="300" Margin="0 0 0 20"/>
                        <TextBlock Text="The Kendo UI Grid control can be found at:" Foreground="#FF808080" TextWrapping="Wrap" FontSize="12" HorizontalAlignment="Left" Margin="0,4,0,0"/>
                        <HyperlinkButton Foreground="#FF37B24F" Margin="0,10,0,20" FontSize="12" FontWeight="Bold" HorizontalAlignment="Left" NavigateUri="https://github.com/cshtml5/CSHTML5.Extensions.Telerik.KendoUI.Grid">
                            <TextBlock Cursor="Hand" TextWrapping="Wrap" Text="https://github.com/cshtml5/CSHTML5.Extensions.Telerik.KendoUI.Grid"/>
                        </HyperlinkButton>
                    </StackPanel>
                    <Button Grid.Row="2" Content="VIEW SOURCE..." Click="ButtonViewSource_Click" Background="#FF37B24F" Style="{StaticResource ButtonViewSource_Style}"/>
                </Grid>
            </ContentControl>
        </local:MasonryPanel>
    </StackPanel>
</Page>
