<Page
    x:Class="CSHTML5.Samples.Showcase.Samples.Third_Party.Telerik_KendoUI.Editor.Editor_Demo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:CSHTML5.Samples.Showcase"
    xmlns:kendo_ui="clr-namespace:kendo_ui_editor.kendo.ui;assembly=CSHTML5.Wrappers.KendoUI.Editor">
    <StackPanel>
        <TextBlock Text="Telerik Kendo UI" Style="{StaticResource PageHeader_Style}"/>
        <local:MasonryPanel Style="{StaticResource Panel_Style}">
            <ContentControl Style="{StaticResource Card_Style}" Width="600">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <ContentControl Content="Editor" Foreground="#FF37B24F" Background="#FFC8929A" Style="{StaticResource HeaderControl_Style}"/>
                    <StackPanel Orientation="Vertical" Grid.Row="1">
                        <TextBlock x:Name="LoadingPleaseWaitMessage" Text="Loading Telerik Kendo UI library, please wait..." Foreground="#FF37B24F" FontSize="18" TextWrapping="Wrap" Margin="16,0,0,10" Visibility="Collapsed"/>
                        <StackPanel Name="EditorDemo" Orientation="Vertical" Margin="0 0 0 20" Visibility="Collapsed">
                            <kendo_ui:Editor x:Name="Editor" Margin="0 0 0 20"/>
                            <Button Name="ButtonExportToPDF" Content="Export to PDF" Click="ButtonExportToPDF_Click"  HorizontalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="The Kendo UI Editor control can be found at:" Foreground="#FF808080" TextWrapping="Wrap" FontSize="12" HorizontalAlignment="Left" Margin="0,4,0,0"/>
                        <HyperlinkButton Foreground="#FF37B24F" Margin="0,10,0,20" FontSize="12" FontWeight="Bold" HorizontalAlignment="Left" NavigateUri="https://github.com/cshtml5/CSHTML5.Extensions.Telerik.KendoUI.Editor">
                            <TextBlock Cursor="Hand" TextWrapping="Wrap" Text="https://github.com/cshtml5/CSHTML5.Extensions.Telerik.KendoUI.Editor"/>
                        </HyperlinkButton>
                    </StackPanel>
                    <Button Grid.Row="2" Content="VIEW SOURCE..." Click="ButtonViewSource_Click" Background="#FF37B24F" Style="{StaticResource ButtonViewSource_Style}"/>
                </Grid>
            </ContentControl>
        </local:MasonryPanel>
    </StackPanel>
</Page>
